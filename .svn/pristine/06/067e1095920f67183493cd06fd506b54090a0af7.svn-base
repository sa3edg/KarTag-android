<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parentCnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/myTripBackBtnCnt"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/top_bar"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/backCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/addTripBackBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/list_selector_holo_light"
                    android:src="@drawable/back" />

                <ImageView
                    android:id="@+id/spaceImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/list_selector_holo_light"
                    android:src="@drawable/sperator" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/addTripTitle"
                android:textColor="#FFFFFF"
                android:textAlignment="gravity" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/daysCnt"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="-7dp"
            android:layout_marginTop="-7dp"
            android:gravity="fill_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/fromImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/transfer"
                android:gravity="left" />

            <LinearLayout
                android:id="@+id/fromCnt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="fill_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/fromBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/down"
                    android:gravity="left"
                    android:text="@string/selectFromBtn"
                    android:textAlignment="gravity" />

                <ImageView
                    android:id="@+id/line00"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#076ecd" />

                <Button
                    android:id="@+id/toBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/down"
                    android:gravity="left"
                    android:text="@string/selectToBtn"
                    android:textAlignment="gravity" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/daysBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="-5dp"
            android:drawableLeft="@drawable/date"
            android:drawableRight="@drawable/down1"
            android:gravity="center_vertical"
            android:text="@string/selectDaysBtn"
            android:textAlignment="gravity"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#076ecd" />

        <Button
            android:id="@+id/dateBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="-5dp"
            android:drawableLeft="@drawable/date"
            android:drawableRight="@drawable/down1"
            android:gravity="center_vertical"
            android:text="@string/selectDateBtn"
            android:textAlignment="gravity" 
            />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#076ecd" />

        <Button
            android:id="@+id/seatsBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="-5dp"
            android:drawableLeft="@drawable/seats"
            android:drawableRight="@drawable/down1"
            android:gravity="center_vertical"
            android:text="@string/selectSeats"
            android:textAlignment="gravity" />

        <ImageView
            android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#076ecd" />

        <RelativeLayout
            android:id="@+id/friendsCnt"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/friendstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/friends"
                android:gravity="center_vertical"
                android:text="@string/friendsOnly"
                android:textAlignment="gravity" />

            <CheckBox
                android:id="@+id/friendschekcbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#076ecd" />

        <RelativeLayout
            android:id="@+id/womensCnt"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/womenstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/woman"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/womenOnly"
                android:textAlignment="gravity" />

            <CheckBox
                android:id="@+id/womenchekcbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#076ecd" />

        <RelativeLayout
            android:id="@+id/smokkingCnt"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/smokkingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/smoking"
                android:gravity="center_vertical"
                android:text="@string/smokerAllowed"
                android:textAlignment="gravity" 
                />

            <CheckBox
                android:id="@+id/smokkingchekcbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line6"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#076ecd" />

        <EditText
            android:id="@+id/commentTxt"
            android:layout_width="fill_parent"
            android:layout_height="75dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Add Comment"
            android:inputType="text"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/addTripAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/list_selector_holo_light"
            android:src="@drawable/done" />
    </LinearLayout>

</ScrollView>