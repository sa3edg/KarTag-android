<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.kartag.gui"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/myTripBackBtnCnt"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" 
        android:background="@drawable/top_bar">


            <ImageButton
                android:id="@+id/myTripBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_holo_light"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back" />

            
    </LinearLayout>

    <TextView
        android:id="@+id/myTripsTitle"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:textSize="20sp"
        android:text="@string/myTripsTitle" 
        android:layout_alignParentLeft="true"
        android:layout_below="@id/myTripBackBtnCnt"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/myTripListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myTripsTitle" 
        android:layout_centerInParent="true"
        android:layout_marginBottom="65dip">

        <ListView
            android:id="@+id/myTripsListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             />
    </RelativeLayout>
            <!--  android:descendantFocusability="blocksDescendants" -->
    
    
        <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" 
    android:layout_alignParentBottom="true"
    android:background="@drawable/buttom_bar">

            <ImageButton
                android:id="@+id/addTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/add_trip" >
            </ImageButton>

            <ImageButton
                android:id="@+id/refreshTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/refresh" >
            </ImageButton>

            <ImageButton
                android:id="@+id/deleteTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/delete" >
            </ImageButton>
        </LinearLayout>
</RelativeLayout>
