<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.kartag.gui"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tripsBackBtnCnt"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" 
        android:background="@drawable/top_bar">


            <ImageButton
                android:id="@+id/tripsBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_holo_light"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back" />

            
    </LinearLayout>

    <ListView
        android:id="@+id/tripsListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@id/tripsBackBtnCnt"
        />
</RelativeLayout>