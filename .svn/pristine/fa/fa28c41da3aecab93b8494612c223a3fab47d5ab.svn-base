<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/searchCnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:id="@+id/myTripBackBtnCnt"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/top_bar"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/backCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/list_selector_holo_light"
                    android:src="@drawable/back" />

                <ImageView
                    android:id="@+id/spaceImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/list_selector_holo_light"
                    android:src="@drawable/sperator" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/searchTitle"
                android:textColor="#FFFFFF"
                android:textAlignment="gravity" />
        </RelativeLayout>
        
        <Button
            android:id="@+id/fromBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/selectFromBtn"
            android:textAlignment="gravity" 
            android:drawableRight="@drawable/down_arrow"
            
            />

        <Button
            android:id="@+id/toBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/selectToBtn"
            android:textAlignment="gravity" 
            android:drawableRight="@drawable/down_arrow"
            />

        <Button
            android:id="@+id/dateBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/selectDateBtn"
            android:textAlignment="gravity" 
            android:drawableRight="@drawable/down_arrow"
            />
       
         
        <Button
            android:id="@+id/searchTripsBtn"
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/searchTitle"
            android:background="@color/nameTextColor"
            android:textColor="#FFFFFF"/>
    </LinearLayout>